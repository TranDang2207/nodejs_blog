<div class="mt-4">
    <h3>Đăng khóa học</h3>
    <form method="POST" action="/courses/update/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="title">Tên khóa học</label>
            <input type="text" class="form-control" value="{{course.name}}" id="title" name="name">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label for="id_video">ID Video</label>
            <input type="text" class="form-control" value="{{course.id_video}}" id="id_video" name="id_video">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label for="level">Level</label>
            <input type="text" class="form-control" value="{{course.level}}" id="level" name="level">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <textarea class="form-control" id="description" name="description">{{course.description}}</textarea>
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>